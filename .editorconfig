root = true

[*]
end_of_line = lf
insert_final_newline =  = true

[*]
charset = utf-8

[*.{py,sh}]
indent_style = space
indent_size = 4

[*.{c,cc,h,html,css,scss,js,jsx,ts,tsx,ejs,json,dart,yaml,txt,sql}]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
indent_size = 8

[*.asm]
indent_style = tab
indent_size = 8

